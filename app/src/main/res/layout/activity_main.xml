<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tejas.myapplication.MainActivity">

    <Button
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="62dp"
        android:layout_marginTop="30dp"
        android:onClick="change"
        android:text="Rupees" />

    <TextView
        android:id="@+id/rupee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:text="Amount in Rs"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="134dp"
        app:srcCompat="@drawable/dollar" />

    <EditText
        android:id="@+id/dollar"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/change"
        android:layout_toStartOf="@+id/change"
        android:ems="10"
        android:hint="Amount in $"
        android:inputType="number"
        android:onClick="changePic" />
</RelativeLayout>